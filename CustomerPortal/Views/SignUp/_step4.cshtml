                <div class="column7"><strong>1.&nbsp;&nbsp;&nbsp; Surname:&nbsp;&nbsp; <strong id="Surname"></strong>  </strong></div>
            </div>
            <div class="rowss">
                <div class="column7"><strong>2.&nbsp;&nbsp;&nbsp; Other Names:&nbsp;&nbsp; <strong id="OtherName"></strong> </strong></div>
            </div>

            <div class="rowss">
                <div class="column7"><strong>3.&nbsp;&nbsp;&nbsp; DOB:&nbsp;&nbsp; <strong id="DateBirth"></strong> </strong></div>
                <div class="column7"><strong>4.&nbsp;&nbsp;&nbsp; Residential Address:&nbsp;&nbsp;  <strong id="ResidentialAddress"></strong></strong></div>
            </div>
            <div class="rowss">
                <div class="column7"><strong>3.&nbsp;&nbsp;&nbsp; Phone:&nbsp;&nbsp; <strong id="Phone"></strong> </strong></div>
                @*<div class="column7"><strong>4.&nbsp;&nbsp;&nbsp; Residential Address:&nbsp;&nbsp;  <strong id="ResidentialAddress"></strong></strong></div>*@
            </div>

            <div class="rowss">
                <div class="column7">
                    <strong>
                        8.&nbsp;&nbsp;&nbsp; Email:&nbsp;&nbsp; <strong id="Email"></strong>
                    </strong>
                </div>

            </div>
            <div class="rowss">
                <div class="column7">
                    <strong>
                        9.&nbsp;&nbsp;&nbsp; Amount:&nbsp;&nbsp; <strong id="Amount"></strong>
