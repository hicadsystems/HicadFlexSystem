            <div class="column7"><strong>10.&nbsp;&nbsp;&nbsp; Location:&nbsp;&nbsp;  <strong id="Location"></strong></strong></div>
            <div class="column7"><strong>11.&nbsp;&nbsp;&nbsp; Postal Address:&nbsp;&nbsp;  <strong id="PostalAddress"></strong></strong></div>
        </div>
        <div class="rowss">
            <div class="column7"><strong>12.&nbsp;&nbsp;&nbsp; Office Address :&nbsp;&nbsp; <strong id="OfficeAddress"></strong></strong></div>
            <div class="column7"><strong>13.&nbsp;&nbsp;&nbsp; Occupation:&nbsp;&nbsp;  <strong id="Occupation"></strong></strong></div>
        </div>
        <div class="rowss">

            <div class="column7"><strong>14.&nbsp;&nbsp;&nbsp; Identity Type:&nbsp;&nbsp; <strong id="IdentityType"></strong></strong></div>
            <div class="column7"><strong>15.&nbsp;&nbsp;&nbsp; Identity Number:&nbsp;&nbsp; <strong id="IdentityNumber"></strong></strong></div>
        </div>
        <div class="rowss">
            <div class="column7"><strong>16.&nbsp;&nbsp;&nbsp; Frequency:&nbsp;&nbsp; <strong id="Frequency"></strong></strong></div>
            <div class="column7">
                <strong>
                    17.&nbsp;&nbsp;&nbsp; Duration&nbsp;&nbsp;  <strong id="Duration"></strong>
                </strong>
            </div>
            <div class="column7"><strong>18.&nbsp;&nbsp;&nbsp; agentcode:&nbsp;&nbsp; <strong id="agentcode"></strong></strong></div>
        </div>
        <h3>Next Of Kin</h3>

        <div class="rowss">
            <div class="column7"><strong>1.&nbsp;&nbsp;&nbsp; FullName:&nbsp;&nbsp; <strong id="nokName"></strong>  </strong></div>
        </div>

        <div class="rowss">
            <div class="column7"><strong>2.&nbsp;&nbsp;&nbsp; Email:&nbsp;&nbsp; <strong id="nokEmail"></strong> </strong></div>
            <div class="column7"><strong>3.&nbsp;&nbsp;&nbsp; Address:&nbsp;&nbsp;  <strong id="nokAddress"></strong></strong></div>
        </div>
        <div class="rowss">
            <div class="column7"><strong>4.&nbsp;&nbsp;&nbsp; Phone:&nbsp;&nbsp; <strong id="nokPhone"></strong> </strong></div>
            @*<div class="column7"><strong>4.&nbsp;&nbsp;&nbsp; Residential Address:&nbsp;&nbsp;  <strong id="ResidentialAddress"></strong></strong></div>*@
        </div>
        <h3>Beneficiaries</h3>

        <div class="row">
            <div id="divBen2">
                @*@Html.Partial("_beneficiaries")*@
                <table id="tbBen2" class="table table-condensed">
                    <thead>
                        <tr class="headings">
                           
                            <th>Name</th>
                            <th>Address</th>
                            <th>Phone </th>
                            <th>Email</th>
                            <th>Date of Birth</th>
                            <th>Relationship</th>
                            <th>Proportion</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-offset-1">
            @Html.CheckBox("TermsAndConditions", false, new { @id = "chkcondition" })
            <a href="#" data-target="#exampleModalCenter" data-toggle="modal">Term and condition</a>

            <input type="button" class="btn btn-gray btn-lg margin-right-md" value="back" id="btnstep4Back" />
            <input type="button" class="btn btn-success btn-lg padding-lg-h" value="Submit" id="btnsubmit" />
        </div>
    </div>
</form>



<!-- Modal -->
