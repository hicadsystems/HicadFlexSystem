
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
    @Styles.Render(BundleConfig.GetBundlesPath(1) + "/common")

    <link href="~/Assests/styles/bootstrap.min.css" rel="stylesheet">
    <link href="~/Assests/styles/style.min.css" rel="stylesheet">
    <link href="~/Assests/styles/datepicker.css" rel="stylesheet" />
    <link href="~/Assests/styles/toastr.min.css" rel="stylesheet">
    <link href="~/Assests/styles/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div id="signuppage" class="bg-primary-alt">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-2 col-md-8 col-md-offset-2 padding-top-md padding-bottom-md login-box" style="background-color:white">
                    <!--<h4 class="text-center lite spaced">PRIMUS LITE</h4>-->
                    <div class="text-center"><a ui-sref="home"><img src="~/images/Nlpc.png" /></a></div>
                    <h2 class="text-center">SignUp for your Policy Plan</h2>
                    <div class="row" style="margin-top:30px;">
                        <div class="col-md-4 stage-info text-center">STEP 1: Personal Information</div>
                        <div class="col-md-4 stage-info text-center">STEP 2: Next of Kin Information</div>
                        <div class="col-md-4 stage-info text-center">STEP 3: Beneficiary Information</div>
                        <div class="col-md-12">
                            <div class="progress">
                                <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="3" style="width:33.33%;" id="signUpProgess">
                                    <span class="sr-only">Step 1 of 3</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12"><h3 id="stepTitle">Step 1: Personal Information</h3></div>
                        <div class="col-md-12"><hr /></div>
                    </div>
                    <div class="border-bottom padding-bottom-sm">
                        <div class="row">
                            <div id="divstep1" style="display:block">@Html.Partial("_step1")</div>
                            <div id="divstep2" style="display:none">@Html.Partial("_step2")</div>
                            <div id="divstep3" style="display:none">@Html.Partial("_step3")</div>
                        </div>
                    @*<div class="margin-top-md">
                        <input type="button" ng-show="currentStage.Navigation.Back != null" ng-click="submit('back')" class="btn btn-gray btn-lg margin-right-md" ng-value="currentStage.Navigation.Back" />
                        <input type="button" ng-click="submit('next')" ng-disable-if="false" ng-watch-on="stageValidity" class="btn btn-warning btn-lg padding-lg-h" ng-value="currentStage.Navigation.Next" />
                    </div>*@
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="modal fade" id="ajax" tabindex="-1" role="basic" aria-hidden="true">
        <img src="~/Images/nlpcLoading.gif" alt="" class="loading">
    </div>
    <script>
        var applicationBaseUrl = @Html.Raw(HttpUtility.JavaScriptStringEncode(
        new Uri(
                   new Uri(this.Context.Request.Url.GetLeftPart(UriPartial.Authority)),
                   Url.Content("~/")
               ).ToString(), true));
    </script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Assests/scripts/signUp.js"></script>
    <script src="~/Assests/scripts/datetimepicker.js"></script>
    <script src="~/Assests/scripts/bootstrap-datepicker.js"></script>
    <script src="~/Assests/scripts/toastr.js"></script>
    <script src="~/Assests/scripts/modal.js"></script>
    <script src="~/Assests/scripts/serializeObject.js"></script>
    <script src="~/Assests/scripts/util.js"></script>
    <script src="~/Assests/scripts/dataService.js"></script>

</body>
</html>
