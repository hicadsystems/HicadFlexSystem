
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
    @Styles.Render(BundleConfig.GetBundlesPath(1) + "/common")
    
    <link href="~/Assests/styles/bootstrap.min.css" rel="stylesheet">
    <link href="~/Assests/styles/style.min.css" rel="stylesheet">
    <link href="~/Assests/styles/datepicker.css" rel="stylesheet" />
    <link href="~/Assests/styles/toastr.min.css" rel="stylesheet">
    <link href="~/Assests/styles/font-awesome.min.css" rel="stylesheet" />

</head>
<body>
    
    <div id="signuppage" class="bg-primary-alt">
        <div class="container">

            <div class="row">
                <div class="col-md-offset-2 col-md-8 col-md-offset-2 padding-top-md padding-bottom-md login-box" style="background-color:white">
                    <!--<h4 class="text-center lite spaced">PRIMUS LITE</h4>-->
                    <div class="text-center"><a ui-sref="home"><img src="~/images/Nlpc.png" /></a></div>
                    <h2 class="text-center">Document upload</h2>

                    <div class="row">
                        <div class="col-md-12"><h3 id="stepTitle">Upload a valid and picture</h3></div>
                        <div class="col-md-12"><hr /></div>
                    </div>
                    <div class="border-bottom padding-bottom-sm">
                        <div class="row">
                            <div class="col-md-12 bg-white">

                                <h3><p id="errormessage" class="alert-danger"></p></h3>

                                @using (Html.BeginForm("SignUp2", "SignUp", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                    <div class="row">

                        <div class="form-group col-md-4">
                            <label for="Picture" class="color-transparent-darker lite small"></label>
                            <img id="picture" style="width:200px;height:200px; object-fit:cover" src="" />
                            <input type="file"
                                   accept=".png,.jpg,.jpeg,.gif,.tif"
                                   name="PictureFile"
                                   id="fileUpload"
                                   class="form-control"
                                   style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                   onchange="document.getElementById('picture').src = window.URL.createObjectURL(this.files[0])" />
                        </div>

                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <button type="submit" value="upload" class="btn btn-success">Upload</button>
                                        </div>
                                    </div>}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="ajax" tabindex="-1" role="basic" aria-hidden="true">
        <img src="~/Images/nlpcLoading.gif" alt="" class="loading">
    </div>
    @*<input type="file" id="fileUpload" />
        <input type="button" id="upload" value="Upload" />*@
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

    <script>

            $('#upload').click(function () {
                if (typeof ($("#fileUpload")[0].files) != "undefined") {
                    var size = parseFloat($("#fileUpload")[0].files[0].size / 1024).toFixed(2);
                    //alert(size + " KB.");
                    if (parseFloat(size) > 5.0) {
                        document.getElementById("errormessage").innerHTML = "Your Passport should not be more than 5.0 KB";
                        return false;
                    }
                } else {
                    alert("This browser does not support HTML5.");
                }
            });
        var applicationBaseUrl = @Html.Raw(HttpUtility.JavaScriptStringEncode(
        new Uri(
                   new Uri(this.Context.Request.Url.GetLeftPart(UriPartial.Authority)),
                   Url.Content("~/")
               ).ToString(), true));
    </script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Assests/scripts/signUp.js"></script>
    <script src="~/Assests/scripts/datetimepicker.js"></script>
    <script src="~/Assests/scripts/bootstrap-datepicker.js"></script>
    <script src="~/Assests/scripts/toastr.js"></script>
    <script src="~/Assests/scripts/modal.js"></script>
    <script src="~/Assests/scripts/serializeObject.js"></script>
    <script src="~/Assests/scripts/util.js"></script>
    <script src="~/Assests/scripts/dataService.js"></script>

</body>
</html>
