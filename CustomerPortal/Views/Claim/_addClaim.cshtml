
<form id="claim">
    <div class="padding-md">
        <div class="row">
            <div class="form-group col-md-6 ss-item-required">
                <label for="Code" class="color-transparent-darker lite small uppercase">Policy</label>
                @Html.DropDownList("Policyno", (IEnumerable<SelectListItem>)ViewBag.Policy, String.Empty,
                                        new { @class = "form-control input-md" })
            </div>
            <div class="form-group col-md-6 ss-item-required">
                <label for="Name" class="color-transparent-darker lite small uppercase">Claim Type</label>
                <div class="row" id="grpclass">
                    @{
                        var clmType = ViewBag.clmTypes as SelectList;
                        foreach (var item in clmType)
                        {
                            <label class="radio-inline">
                                <input type="radio" value="@item.Value" name="clmType" onchange="showAmount(this);"> @item.Text
                            </label>
                        }
                    }

                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 ss-item-required">
                <label for="Commission" class="color-transparent-darker lite small uppercase">Effective Date</label>
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control datepicker" value="@DateTime.Today.ToString("yyyy-MM-dd")" name="effDate" readonly />
                    <span class="input-group-btn" style="padding-top:1px;">
                        <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                    </span>
                </div>
            </div>
            <div class="form-group col-md-6" style="display:none" id="divamt">
                <label for="Commission" class="color-transparent-darker lite small uppercase">Amount</label>
                <input type="text" name="amount" class="form-control input-md" required />
            </div>
        </div>
    </div>
</form>

