@model List<Flex.Data.Model.Portlet>
@{
    ViewBag.Title = "::DashBoard";
}
@{
    string greeting;
    if (DateTime.Now.Hour < 12)
    {
        greeting = "Good Morning";
        //lblDate.Text = Convert.ToString(DateTime.Now);
    }
    else if (DateTime.Now.Hour < 17)
    {
        greeting = "Good Afternoon";
        //lblDate.Text = Convert.ToString(DateTime.Now);
    }
    else
    {
        greeting = "Good Evening";
        //lblDate.Text = Convert.ToString(DateTime.Now);
    }
}
<div>
    <div class="home-banner">
        <div class="container">
            <div class="row">
                <!--<div class="col-md-6">-->
                <div class="col-md-12">
                    <p><h3 style="line-height:1.35;">@greeting <strong style="white-space:nowrap;" id="greetingName"></strong></h3></p>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="margin-top:20px">
        <div class="row">

            <div class="col-md-12">
                <div class="col-md-3">
                    <div>@Html.Partial("_profile")</div>
                    @*<div class=" advert">
                            <img src="Assets/images/advert.png" width="255" />
                        </div>*@
                </div>
                <div class="col-md-9">
                    <div class="row">
                        @{
                            if (Model.Any())
                            {
                                foreach (var portlet in Model)
                                {
                                    <div class="col-md-3 margin-bottom-md @portlet.Background margin-right-md margin-left-md">
                                        <a class="tile" href="@Url.Action("PortletDefaultPage", "DashBoard", new { id = @portlet.Id })">
                                            <div class="title"></div>
                                            <div class="picture">
                                                <img src="~@portlet.ImageUrl" alt="@portlet.Name">
                                            </div>
                                            <div class="footer"><span>@portlet.Name</span></div>
                                        </a>
                                    </div>

                                }
                            }
                        }

                        @*<div class="col-md-6" ng-if="$userData.IsAdmin">
                                <a ui-sref="admin" class="color-gray bold">
                                    <span class="inline-block round text-center" style="width:36px; height:36px; line-height:32px; vertical-align:middle; border:2px solid #777;"><span class="fa fa-server fa-lg"></span></span> Admin Panel
                                </a>
                            </div>*@
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
