@using Flex.Data.Model
@using Flex.Data.ViewModel
@model PagedResult<fl_translog>
@*<ul class="nav nav-tabs border-none">
    <li role="presentation" class="active">
        <a class="border-none uppercase bold padding-horizontal-md margin-right-xs">Payment</a>
    </li>
</ul>*@
@{
    var datefrom = DateTime.Today.ToString("yyyy-MM-dd");
    var dateto = DateTime.Today.ToString("yyyy-MM-dd");
}
<div class="padding-top-md">
    <div class="panel">
        <div class="padding-sm">
            <form action="@Url.Action("UpdateTransactions","Payment")" method="post" name="form">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-5 text-right padding-none">
                                <label for="DateFrom" class="uppercase smaller lite margin-top-sm margin-right-sm">Date From</label>
                            </div>
                            <div class="col-sm-7">
                                @*<div class="form-group">
                                <input type="text" name="DateFrom" class="form-control input-md" value="@datefrom" />
                            </div>*@
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control datepicker" value="@datefrom" name="DateFrom" id="DateFrom" readonly />
                                    <span class="input-group-btn" style="padding-top:1px;">
                                        <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-5 text-right padding-none">
                                <label for="DateTo" class="uppercase smaller lite margin-top-sm margin-right-sm">Date To</label>
                            </div>
                            <div class="col-sm-7">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control datepicker" value="@dateto" name="DateTo" id="DateTo" readonly />
                                    <span class="input-group-btn" style="padding-top:1px;">
                                        <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <input type="button" class="btn btn-info btn-sm" value="Update" id="btnppsearch" data-url="@Url.Action("Update","Payment")" onclick="updateTransaction()" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




