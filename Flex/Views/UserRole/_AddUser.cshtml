@model Flex.Data.Model.fl_password
<form id="AddUser">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="padding-md">
        <div class="row">
            <div class="form-group col-md-6">
                <label for="Code" class="color-transparent-darker lite small uppercase">UserName</label>
                <input type="text" name="UserName" class="form-control input-md" required  value="@Model.userid"/>
            </div>
            <div class="form-group col-md-6">
                <label for="Name" class="color-transparent-darker lite small uppercase">Name</label>
                <input type="text" name="Name" class="form-control input-md" required value="@Model.Name" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="Type" class="color-transparent-darker lite small uppercase">Email</label>
                <input type="email" name="Email" class="form-control input-md" required value="@Model.email"/>
            </div>
            <div class="form-group col-md-6">
                <label for="Location" class="color-transparent-darker lite small color-gray">Department</label>
                <input type="text" name="Dept" class="form-control input-md" value="@Model.userdept" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="Address" class="color-transparent-darker lite small uppercase">Role</label>
                @Html.DropDownList("Role", (IEnumerable<SelectListItem>)ViewBag.Roles, String.Empty,
                        new { @class = "form-control input-md", @required = true })
            </div>
            @if (Model.Id > 0)
            {
                <div class="form-group col-md-6" style="display:@Model.Id > 0 ?'block':'none'">
                    <label for="Address" class="color-transparent-darker lite small uppercase">Status</label>
                    @Html.DropDownList("Status", (IEnumerable<SelectListItem>)ViewBag.UserStatus, String.Empty,
                        new { @class = "form-control input-md", @required = true })
                </div>
            }
            

        </div>
    </div>
</form>

