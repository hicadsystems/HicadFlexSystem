@using Flex.Data.ViewModel
@model SignUpBindingModel
@{ 
    var nextofkin = @Model.PersonalInfo.NextofKin;
}
<form name="step2" action="@Url.Action("Next")" id="step2Frm">
    <div class="col-md-12 bg-white">
        <div class="row">
            <div class="form-group col-md-4 ss-item-required">
                <label class="color-transparent-darker lite small" for="Name">Name</label>
                <input type="text" name="Name" class="form-control input-md" id="form-nextofkin-name" autofocus required value="@nextofkin.Name">
                <span class="text-danger pull-right small">* required</span>
            </div>
            <div class="form-group col-md-4 ss-item-required">
                <label class="color-transparent-darker lite small" for="Address">Address</label>
                <textarea name="Address" class="form-control input-md" required rows="2" value="@nextofkin.Address"></textarea>
                <span class="text-danger pull-right small">* required</span>
            </div>
            <div class="form-group col-md-4 ss-item-required">
                <label class="color-transparent-darker lite small" for="Phone">Phone</label>
                <input type="tel" name="Phone" class="form-control input-md" required  value="@nextofkin.Phone"/>
                <span class="text-danger pull-right small">* required</span>
            </div>
            </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label class="color-transparent-darker lite small" for="Email">Email</label>
                <input type="email" name="Email" class="form-control input-md" value="@nextofkin.Email" />
            </div>

            <div class="form-group col-md-4">
                <label for="dob" class="color-transparent-darker lite small">DATE of BIRTH</label>
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control datepicker" name="Dob" id="Dob" value="@nextofkin.Dob" />
                    <span class="input-group-btn" style="padding-top:1px;">
                        <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                    </span>
                </div>
                @*<input type="text" name="dob" class="form-control input-md datepicker" />*@
                @*<span class="text-danger pull-right small">* required</span>*@
            </div>
        </div>
            <div class="col-md-offset-1">
                <input type="button" class="btn btn-gray btn-lg margin-right-md" value="back" onclick="moveBack(1)" />
                <input type="button" class="btn btn-success btn-lg padding-lg-h" value="Next" onclick="createPolicy(2)" />
            </div>
        </div>
    @*</div>*@
</form>

