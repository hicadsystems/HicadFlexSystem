@model List<Flex.Data.ViewModel.PendingPolicy>
@{
    var datefrom = DateTime.Today.AddDays(-30).ToString("yyyy-MM-dd");
    var dateto = DateTime.Today.ToString("yyyy-MM-dd");
}


<div class="padding-top-md">
    <div class="panel">
        <div class="padding-sm">
            <div class="row">
                <div class="col-sm-7">
                    <div class="row">
                        <div class="col-sm-2 padding-none text-center">
                            <label class="uppercase smaller lite margin-top-sm">Between</label>
                        </div>
                        <div class="col-sm-4 padding-none">
                            <div class="input-group input-group-sm">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control datepicker" value="@datefrom" name="txtadatefrom" id="txtadatefrom" />
                                    <span class="input-group-btn" style="padding-top:1px;">
                                        <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1 padding-none text-center">
                            <label class="uppercase smaller lite margin-top-sm">And</label>
                        </div>
                        <div class="col-sm-4 padding-none">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control datepicker" value="@dateto" name="txtadateto" id="txtadateto" />
                                <span class="input-group-btn" style="padding-top:1px;">
                                    <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <input type="button" class="btn btn-info btn-sm" value="SEARCH" id="btnapsearch" data-url="@Url.Action("ApprovedPolicy")"  onclick="retrieveApprovedQuaotations(this);"/>
                </div>
            </div>
        </div>

        <div id="tbaPolicyContainer" class="table-responsive" style="display:none">
        </div>

    </div>
</div>

