@using Flex.Data.Model
@using Flex.Data.ViewModel
@model PagedResult<vwPolicy>

<div class="padding-top-md">
    <div class="panel">
        <div class="padding-sm">
            <form id="frmSearch">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-5 text-right padding-none">
                                <label for="Name" class="uppercase smaller lite margin-top-sm margin-right-sm">Policy No.</label>
                            </div>
                            <div class="col-sm-7">
                                <div class="form-group">
                                    @*<input type="text" class="form-control input-md" name="PolicyNo" />*@
                                    <input type="text" class="form-control" data-autocomplete="@Url.Action("PolicynoAutoComplete","CustPolicy")" style="width: 200px" />
                                    <input type="hidden" value="" id="PolicyNo" data-autocomplete-id="true" name="PolicyNo" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-5 text-right padding-none">
                                <label for="Name" class="uppercase smaller lite margin-top-sm margin-right-sm">Name</label>
                            </div>
                            <div class="col-sm-7">
                                <div class="form-group">
                                    <input type="text" class="form-control input-md" name="Name"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-5 text-right padding-none">
                                <label for="Telephone" class="uppercase smaller lite margin-top-sm margin-right-sm">Telephone</label>
                            </div>
                            <div class="col-sm-7">
                                <div class="form-group">
                                    <input type="text" class="form-control input-md" name="Phone" />
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                     <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-5 text-right padding-none">
                                <label for="Email" class="uppercase smaller lite margin-top-sm margin-right-sm">Agent</label>
                            </div>
                            <div class="col-sm-7">
                                <div class="form-group">
                                    @Html.DropDownList("Agent", (IEnumerable<SelectListItem>)ViewBag.Agent, String.Empty,
                                        new { @class = "form-control input-md" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-5 text-right padding-none">
                                <label for="Name" class="uppercase smaller lite margin-top-sm margin-right-sm">Location</label>
                            </div>
                            <div class="col-sm-7">
                                <div class="form-group">
                                    @Html.DropDownList("Location", (IEnumerable<SelectListItem>)ViewBag.Location, String.Empty,
                                        new { @class = "form-control input-md"})
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <input type="button" class="btn btn-info btn-sm" value="SEARCH" id="btnppsearch" data-url="@Url.Action("SearchPolicy", "CustPolicy")" onclick="searchPolicies(this);" />
                    </div>
                </div>
            </form>
        </div>

        @{
            var dispaly = string.Empty;

            dispaly = Model.Items.Any() ? "block" : "none";
        }
        <div id="tbpolicy" class="table-responsive">
            @Html.Partial("_tbPolicies", Model)
        </div>

    </div>
</div>