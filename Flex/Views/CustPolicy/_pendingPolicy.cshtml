@model List<Flex.Data.ViewModel.PendingPolicy>
@{
    var datefrom = DateTime.Today.AddDays(-30).ToString("yyyy-MM-dd");
    var dateto = DateTime.Today.ToString("yyyy-MM-dd");
}
<div class="padding-top-md">
    <div class="panel">
        <div class="padding-sm">
            <div class="row">
                <div class="col-sm-7">
                    <div class="row">
                        <div class="col-sm-2 padding-none text-center">
                            <label class=" uppercase smaller lite margin-top-sm">Between</label>
                        </div>
                        <div class="col-sm-4 padding-none">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control datepicker" value="@datefrom" name="txtdatefrom" id="txtdatefrom" />
                                <span class="input-group-btn" style="padding-top:1px;">
                                    <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-1 padding-none text-center">
                            <label class=" uppercase smaller lite margin-top-sm">And</label>
                        </div>
                        <div class="col-sm-4 padding-none">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control datepicker" value="@dateto" name="txtdateto" id="txtdateto" />
                                <span class="input-group-btn" style="padding-top:1px;">
                                    <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <input type="hidden" data-url="@Url.Action("UnApprovedPolicy")" data-url2="@Url.Action("ApprovedPolicy")" value="" id="hdProposal" />
                    <input type="button" class="btn btn-info btn-sm" value="SEARCH" id="btnppsearch" data-url="@Url.Action("UnApprovedPolicy")" onclick="retrievePendQuatations(this);"/>
                </div>
            </div>
        </div>

        <div id="tbpPolicyContainer" class="table-responsive" style="display:none">
        </div>
        
        @*<div class="padding-sm" ng-if="filter.PaymentSourceType == 'FFT' && allPayments.foreign">
            <paging ng-model="model.currentPage" ng-change="submit(model)" page-sizes="pageSizes" items-per-page="model.pageSize" total-items="model.totalItems"></paging>
        </div>*@
    </div>
</div>
