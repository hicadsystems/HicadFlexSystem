@{
    var datefrom = DateTime.Today.AddDays(-30).ToString("yyyy-MM-dd");
    var dateto = DateTime.Today.ToString("yyyy-MM-dd");
}

<ul class="nav nav-tabs border-none">
    <li role="presentation" class="active">
        <a class="border-none uppercase bold padding-horizontal-md margin-right-xs">Investment History</a>
    </li>
</ul>

<div class="padding-top-md">
    <form id="investment">
        <div class="panel">
            <div class="padding-sm">
                <div class="row">
                    <div class="col-sm-3">
                        <label for="Code" class="color-transparent-darker lite small uppercase">Policy</label>
                        @*<input type="text" class="form-control input-md" name="Policy" id="policyno" />*@
                        <input type="text" class="form-control" data-autocomplete="@Url.Action("PolicynoAutoComplete","CustPolicy")" style="width: 200px" />
                        <input type="hidden" value="" id="policyno" data-autocomplete-id="true" name="Policy" />
                    </div>
                    <div class="col-sm-3 ss-item-required">
                        <label for="Code" class="color-transparent-darker lite small uppercase">Start Date</label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control datepicker" value="@datefrom" name="sDate"/>
                            <span class="input-group-btn" style="padding-top:1px;">
                                <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-3 ss-item-required">
                        <label for="Code" class="color-transparent-darker lite small uppercase">End Date</label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control datepicker" value="@dateto" name="eDate" />
                            <span class="input-group-btn" style="padding-top:1px;">
                                <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <div class="radio">
                                <label class="color-transparent-darker lite small uppercase">
                                    <input type="radio" name="option" value="RctHistory" checked> Receipt History
                                </label>
                            </div>
                            <div class="radio">
                                <label class="color-transparent-darker lite small uppercase">
                                    <input type="radio" name="option" value="RctValue" required> Receipt Current Value(Receipt)
                                </label>
                            </div>
                            <div class="radio">
                                <label class="color-transparent-darker lite small uppercase">
                                    <input type="radio" name="option" value="PolicyValue"> Policy Current Value
                                </label>
                            </div>
                            <div class="radio">
                                <label class="color-transparent-darker lite small uppercase">
                                    <input type="radio" name="option" value="RctValuePolicy"> Receipt Current Value (Policy)
                                </label>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 text-right">
                        <input type="button" class="btn btn-info btn-sm" value="Submit" id="btnsubmit" onclick="invHistory();" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
