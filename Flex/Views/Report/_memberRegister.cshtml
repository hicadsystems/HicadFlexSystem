@{
    var datefrom = DateTime.Today.AddDays(-30).ToString("yyyy-MM-dd");
    var dateto = DateTime.Today.ToString("yyyy-MM-dd");
}

<ul class="nav nav-tabs border-none">
    <li role="presentation" class="active">
        <a class="border-none uppercase bold padding-horizontal-md margin-right-xs">Member Register</a>
    </li>
</ul>

<div class="padding-top-md">
    <form id="memList">
        <div class="panel">
            <div class="padding-sm">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <div class="radio">
                                <label class="color-transparent-darker lite small uppercase">
                                    <input type="radio" name="type" value="All" checked> All Member
                                </label>
                            </div>
                            <div class="radio">
                                <label class="color-transparent-darker lite small uppercase">
                                    <input type="radio" name="type" value="Active" required> Active Members
                                </label>
                            </div>
                            <div class="radio">
                                <label class="color-transparent-darker lite small uppercase">
                                    <input type="radio" name="type" value="Withdrawn"> Withdrawn Members
                                </label>
                            </div>
                            <div class="radio">
                                <label class="color-transparent-darker lite small uppercase">
                                    <input type="radio" name="type" value="Agent" onchange="toggleType(this);"> Members By Agent
                                </label>
                            </div>
                            <div class="radio">
                                <label class="color-transparent-darker lite small uppercase">
                                    <input type="radio" name="type" value="Branch" onchange="toggleType(this);"> Members By Branch
                                </label>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-6 ss-item-required">
                                <label for="Code" class="color-transparent-darker lite small uppercase">Start Date</label>
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control datepicker" value="@datefrom" name="sDate" />
                                    <span class="input-group-btn" style="padding-top:1px;">
                                        <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-sm-6 ss-item-required">
                                <label for="Code" class="color-transparent-darker lite small uppercase">End Date</label>
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control datepicker" value="@dateto" name="eDate" />
                                    <span class="input-group-btn" style="padding-top:1px;">
                                        <button type="button" class="btn btn-default" onclick="openDatePicker(this)"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row" id="divAgent" style="display:none">
                        <div class="col-sm-6">
                            <label for="Agent" class="color-transparent-darker lite small uppercase">Agent</label>
                            @Html.DropDownList("Agent", (IEnumerable<SelectListItem>)ViewBag.Agents, String.Empty,
                        new { @class = "form-control input-md"})
                        </div>
                    </div>
                    <div class="row" id="divLocation" style="display:none">
                        <div class="col-sm-6">
                            <label for="Agent" class="color-transparent-darker lite small uppercase">Location</label>
                            @Html.DropDownList("Location", (IEnumerable<SelectListItem>)ViewBag.Location, String.Empty,
                        new { @class = "form-control input-md"})
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 text-right">
                        <input type="button" class="btn btn-info btn-sm" value="Submit" id="btnsubmit"  onclick="memberList();" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
